@model SSpartanoInmobiliaria.Models.Usuario

@{
    ViewData["Title"] = "Restaurar Usuario";
}

<h1>Restaurar</h1>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCuenta)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoCuentaNombre)
        </dd>
    </dl>
    <hr />
    <h5>¿Está seguro de querer restaurar el usuario @Model.Apellido @Model.Nombre (ID: #@Model.Id)?</h5>
    <h6><i class='fas fa-exclamation-triangle'></i> Esta acción le permitirá al mismo acceder nuevamente al sistema.</h6>

    <form asp-action="Restore">
        <input type="submit" value="Restaurar" class="btn btn-success" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
