@model SSpartanoInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Baja Contrato";
}

<h1>Baja</h1>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            #@Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Inmueble.Estado != 1)
            {
                <i data-toggle="tooltip" data-placement="bottom" title="Eliminado/Oculto" class='fas fa-exclamation-triangle'></i>
            }
            @Model.Inmueble.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Inquilino.Estado != 1)
            {
                <i data-toggle="tooltip" data-placement="bottom" title="Eliminado/Oculto" class='fas fa-exclamation-triangle'></i>
            }
            @Model.Inquilino.ToString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Model.FechaInicio.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Model.FechaFin.ToShortDateString()
        </dd>
    </dl>
    <hr />
    <h5>¿Está seguro de querer eliminar el contrato #@Model.Id?</h5>
    <h6><i class='fas fa-exclamation-triangle'></i> Esta acción <b>afectará</b> el estado del inmueble asociado pero no eliminará el registro de pagos.</h6>

    <hr />
    <form asp-route-InmuebleId="@Model.InmuebleId" asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-sm btn-outline-danger" />
        <a class="btn btn-sm btn-outline-dark" asp-action="Index">Volver a la lista</a>
    </form>

</div>
