@model SSpartanoInmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Alta Pago";
    Contrato Contrato = (Contrato)ViewData["Contrato"];
}

<h1>Alta</h1>
<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ContratoId" class="control-label"></label>
                <input readonly asp-for="ContratoId" value="@Contrato.Id"class="form-control" />
                <span asp-validation-for="ContratoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-ContratoId="@Contrato.Id" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
